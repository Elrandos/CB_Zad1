@page
@model CB_Zad1.Pages.Admin.UserListModel
@{
    ViewData["Title"] = "Zarządzanie Użytkownikami";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="./AddUser" class="btn btn-primary">Dodaj nowego użytkownika</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>Login (UserName)</th>
        <th>Pełna Nazwa</th>
        <th>Status</th>
        <th>Akcje</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model.Users)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.FullName</td>
            <td>
                @if (user.IsBlocked)
                {
                    <span class="badge bg-danger">ZABLOKOWANY</span>
                }
                else
                {
                    <span class="badge bg-success">Aktywny</span>
                }
            </td>
            <td>
                <a asp-page="./EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary">
                    Edytuj
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>