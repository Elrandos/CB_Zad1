@page
@model LoginModel

@{
    ViewData["Title"] = "Logowanie";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2>Logowanie do aplikacji</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Login" class="form-control" autocomplete="username" aria-required="true" placeholder="login" />
                    <label asp-for="Input.Login" class="form-label">Użytkownik</label>
                    <span asp-validation-for="Input.Login" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Hasło</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="card mb-3 border-primary">
                    <div class="card-body bg-light">
                        <h5 class="card-title text-primary" style="font-size: 1rem;">Weryfikacja bezpieczeństwa</h5>
                        <p class="card-text mb-2">
                            <strong>@Model.CaptchaQuestion</strong>
                        </p>
                        <div class="form-floating">
                            <input asp-for="Input.CaptchaAnswer" class="form-control" autocomplete="off" placeholder="Odpowiedź" />
                            <label asp-for="Input.CaptchaAnswer">Twoja odpowiedź</label>
                            <span asp-validation-for="Input.CaptchaAnswer" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Zaloguj</button>
                </div>

                <div class="mt-3">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Zapomniałeś hasła?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Rejestracja nowego użytkownika</a>
                    </p>
                </div>
            </form>
        </section>
    </div>

    <div class="col-md-6 col-md-offset-2">
        <section>
            <h3>Użyj innego serwisu do logowania.</h3>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            Brak skonfigurowanych zewnętrznych serwisów uwierzytelniania.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}